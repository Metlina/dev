                @Html.EditorFor(model => model.Oib, new { htmlAttribute = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Oib, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
