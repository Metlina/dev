<Application
    x:Class="Leviton.SnapLink.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Leviton.SnapLink"
    xmlns:viewHelpers="using:Leviton.SnapLink.ViewHelpers"
    xmlns:viewModels="using:Leviton.ViewModels"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PaneBackground" Color="Gray" />
                    <viewModels:ViewModelLocator x:Key="Locator"/>
                    <viewHelpers:NavigationCommands x:Key="Navigation" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
