<Page
    x:Class="Leviton.SnapLink.Views.ButtonsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Leviton.SnapLink.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vh="using:Leviton.Common.ViewHelper"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          vh:Alt.RowDefinitions="Auto, Auto, Auto, Auto, Auto"
          vh:Alt.ColumnDefinitions="Auto, Auto, *"
          >

        <Button Grid.Column="2"
                Background="Transparent"
                >
            <TextBlock Text="Good Night" />
        </Button>


        <Button Grid.Row="1" Grid.Column="2"
                Background="Transparent"
                >
            <TextBlock Text="Morning" />
        </Button>


        <Button Grid.Row="2" Grid.Column="2"
                Background="Transparent"
                >
            <TextBlock Text="Romantic" />
        </Button>


        <Button Grid.Row="3" Grid.Column="2"
                Background="Transparent"
                >
            <TextBlock Text="Party" />
        </Button>


        <Button Grid.Row="4" Grid.Column="2"
                Background="Transparent"
                >
            <TextBlock Text="All Off" />
        </Button>

    </Grid>
</Page>
