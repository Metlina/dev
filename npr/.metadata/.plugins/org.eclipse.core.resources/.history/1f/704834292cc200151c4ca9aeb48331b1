FUNCTION_BLOCK

VAR_INPUT
	kihanje : REAL;
	kasljanje : REAL;
	grlobolja : REAL;
	otezano_disanje : REAL;
	glavobolja : REAL;
	visina_temperature : REAL;
	bol_u_plucima : REAL;
	krvav_ispljuvak : REAL;
	suzenje : REAL;
	promuklost : REAL;
	hripanje : REAL;
	zacepljen_nos : REAL;
	gubitak_apetita : REAL;
	slabost_tijela : REAL;
END_VAR

VAR_OUTPUT
	odluka : REAL;
END_VAR

FUZZIFY kihanje
	TERM povremeno := (0, 1) (4, 0);
	TERM cesto := (3, 0) (5, 1) (8,0);
	TERM jako_cesto := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY kasljanje
	TERM neproduktivno :=  (0, 1) (4, 0);//sluz izbacujes
	TERM produktivno := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY grlobolja
	TERM slaba := (0, 1) (4, 0);
	TERM umjerena := (3, 0) (5, 1) (8,0);
	TERM jaka := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY otezano_disanje
	TERM slabo := (0, 1) (4, 0);
	TERM umjereno := (3, 0) (5, 1) (8,0);
	TERM jako := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY glavobolja
	TERM slaba := (0, 1) (4, 0);
	TERM umjerena := (3, 0) (5, 1) (8,0);
	TERM jaka := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY visina_temperature
	TERM trideset_sedam := (1, 0) (0, 1) (0, 2);
	TERM trideset_osam := (2, 0) (3, 1) (0, 4);
	TERM trideset_devet := (4, 0) (5, 1) (0, 6);
	TERM cetrdeset := (6, 0) (7, 1) (0, 8);
	TERM cetrdeset_jedan := (8, 0) (9, 1) (0, 10);
END_FUZZIFY

FUZZIFY bol_u_plucima
	TERM slaba := (0, 1) (4, 0);
	TERM umjerena := (3, 0) (5, 1) (8,0);
	TERM jaka := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY krvav_ispljuvak
	TERM povremeno := (0, 1) (4, 0);
	TERM cesto := (3, 0) (5, 1) (8,0);
	TERM jako_cesto := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY suzenje
	TERM slabo := (0, 1) (4, 0);
	TERM srednje := (3, 0) (5, 1) (8,0);
	TERM jako := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY promuklost
	TERM bez_pojavu_boli := (0, 1) (0, 2) (4, 0);
	TERM uz_pojavu_boli := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY hripanje
	TERM tiho := (0, 1) (4, 0);
	TERM srednje := (3, 0) (5, 1) (8,0);
	TERM glasno := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY zacepljen_nos
	TERM jedna_nosnica := (0, 1) (0, 2) (4, 0);
	TERM obe_nosnice := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY gubitak_apetita
	TERM stalan := (0, 1) (0, 2) (4, 0);
	TERM povremen := (7, 0) (10, 1);
END_FUZZIFY

FUZZIFY slabost_tijela
	TERM parcijalna := (0, 1) (0, 2) (4, 0);
	TERM potpuna := (7, 0) (10, 1);
END_FUZZIFY


DEFUZZIFY odluka
	TERM gripa := (0, 0) (2.5, 1) (5, 0);
	TERM prehlada := (5, 0) (7.5, 1) (10, 0);
	TERM akutni_bronhitis := (10, 0) (12.5, 1) (15, 0);
	TERM kronicni_bronhitis := (15, 0) (17.5, 1) (20, 0);
	TERM upala_pluca := (20, 0) (22.5, 1) (25, 0);
	TERM rak_pluca := (25, 0) (27.5, 1) (30, 0);
	TERM tuberkuloza := (30, 0) (32.5, 1) (35, 0);
	TERM rak_grla := (35, 0) (37.5, 1) (40, 0);
	TERM upala_angina := (40, 0) (42.5, 1) (45, 0);
	TERM zacepljenost_disnih_puteva := (45, 0) (47.5, 1) (50, 0);
	METHOD : COG;
	DEFAULT := 0;
END_DEFUZZIFY

RULEBLOCK bolesti_pravila

AND : MIN;
OR : MAX;
ACT : MIN;
ACCU : MAX;

	RULE 1 : IF kasljanje IS OR kihanje IS OR promuklost IS OR suzenje IS OR grlobolja IS THEN odluka IS gripa;
	RULE 2 : IF kasljanje IS OR kihanje IS OR promuklost IS OR suzenje IS OR grlobolja IS THEN odluka IS prehlada;
	RULE 3 : otežano disanje, hripanje, povišena tjelesna temperatura, bol u prsnom košu i kašalj sa sivkastim ispljuvkom THEN odluka IS akutni_bronhitis;
	RULE 4 : THEN odluka IS kronicni_bronhitis;
	RULE 5 : visoka temperatura, bolno i otežano disanje, te krvav ispljuvak THEN odluka IS upala_pluca;
	RULE 6 : pojaèan kašalj otežano disanje, krvav ispljuvak í bol u prsima. THEN odluka IS rak_pluca;
	RULE 7 : THEN odluka IS tuberkuloza;
	RULE 8 : THEN odluka IS rak_grla;
	RULE 9 : THEN odluka IS upala_angina;
	RULE 10 : THEN odluka IS zacepljenost_disnih_puteva;
END_RULEBLOCK

END_FUNCTION_BLOCK